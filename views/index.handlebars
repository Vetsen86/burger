<h1>BURGERS!</h1>

<div class="row">
  <div class="col" id="undevoured">
    <h1>Burgers yet to be eaten:</h1>
    {{#each burgers}}
      {{#unless devoured}}
        <h3>{{burger_name}}</h3>
        <button class="btn btn-large btn-danger devour" data-burger-id={{id}}>Devour!</button>
      {{/unless}}
    {{/each}}
  </div>
  <div class="col" id="devoured">
    <h1>Burgers devoured:</h1>
    {{#each burgers}}
      {{#if devoured}}
        <h3>{{burger_name}}</h3>  
      {{/if}}
    {{/each}}
  </div>
</div>

<form>
  <div class="form-group">
    <label for="add-burger">Burger Name</label>
    <input type="text" class="form-control" id="add-burger" aria-describedby="emailHelp">
    <button type="submit" id="burger-submit" class="btn btn-primary">Submit</button>
</form>